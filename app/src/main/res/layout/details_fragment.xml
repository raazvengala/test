<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.DetailsFragment">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:adjustViewBounds="true"
            tools:src="@color/white"
            />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/br_image_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iv_image"
            app:barrierDirection="bottom"
            />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="12dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="12dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="12dp"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintTop_toTopOf="@+id/br_image_bottom"
            app:layout_constraintEnd_toStartOf="@+id/tv_rating"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Movie Name"
            />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/gl_right"
            app:layout_constraintTop_toTopOf="@id/br_image_bottom"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:maxLines="1"
            tools:text="Rating"
            />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintEnd_toEndOf="@id/gl_right"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Movie Description : Large description goes here.Large description goes hereLarge description goes hereLarge description goes here"
            />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/br_desc_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_description"
            app:barrierDirection="bottom"
            />



        <Button
            android:id="@+id/btn_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_movie"
            android:textAllCaps="false"
            android:background="@color/design_default_color_primary_variant"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintEnd_toStartOf="@+id/btn_share"
            app:layout_constraintTop_toTopOf="@+id/br_desc_bottom"
            app:layout_constraintBottom_toBottomOf="@+id/gl_bottom"
            />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_movie"
            android:textAllCaps="false"
            android:background="@color/design_default_color_primary_variant"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintStart_toEndOf="@+id/btn_rate"
            app:layout_constraintEnd_toStartOf="@+id/btn_save"
            app:layout_constraintTop_toTopOf="@+id/btn_rate"
            app:layout_constraintBottom_toBottomOf="@+id/btn_rate"
            />

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_movie"
            android:textAllCaps="false"
            android:background="@color/design_default_color_primary_variant"
            android:src="@drawable/ic_baseline_bookmark_24"
            app:layout_constraintStart_toEndOf="@+id/btn_share"
            app:layout_constraintEnd_toEndOf="@id/gl_right"
            app:layout_constraintTop_toTopOf="@+id/btn_rate"
            app:layout_constraintBottom_toBottomOf="@+id/btn_rate"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>